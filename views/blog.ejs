<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1><%= blog.title %></h1>
            <img src="<%= blog.coverImageUrl %>" width="500px">
            <p><%= blog.body %></p>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="50px"> <%= blog.createdBy.fullName %>
        </div>
        <% if (locals.user) { %>
        <div class="container mt-3">
            <h1>Comments(<%= comment.length %>)</h1>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter your comments">
                    <div class="mt-2">
                        <button class="btn btn-sm btn-primary" type="submit">Add</button>
                    </div>
                </div>
            </form>
        </div>
    <% } %>
    <div class=" container mt-3">
        <% comment.forEach(comment => { %>
         <div>
            <img src="<%= comment.createdBy.profileImageUrl %>" width="50px">
            <%= comment.createdBy.fullName %>
            <pre><%= comment.content %></pre>
         </div>
        <% }) %>
    </div>
    <%- include('./partials/script') %>
</body>

</html>